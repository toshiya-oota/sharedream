<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="users_form">
        <div class="media-left">
          <% if user.image.present? %>
          <%= image_tag user.image.url(:thumb) %>
          <% else %>
          <%= image_tag ("/images/tamago.1.jpeg") %>
          <% end %>
        </div>
      <div class="media-body">
        <div>
         <h4><%= link_to user.name, user_path(user) %></h4>
        </div>
        <div>
         <p class="users_self_content_form"><%= user.self_content %></p>
         <%= link_to "#{user.name}のシェアドリへ", user_path(user) ,class: 'btn btn-warning'%></h4>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
<% end %>