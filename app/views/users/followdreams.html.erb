<div class="row">
  <aside class="col-xs-6 col-md-4">
    <% if current_user == @user %>
    <a href="/" class="btn btn-primary btn-lg">夢をつぶやく</a>
    <br></br>
    <%= link_to 'Dreamerを探す', users_path, class: 'btn btn-info btn-lg' %>
    <% end %>
  </aside>
  <div class="col-xs-6 col-md-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>my dream <span class="badge"><%= @count_user_sharedreams %></span><% end %></li>
      <li class="<%= 'active' if current_page?(followdreams_user_path(@user)) %>"><%= link_to followdreams_user_path(@user) do %>follow <span class="badge"><%= @count_followdreams %></span><% end %></li>
      <li class="<%= 'active' if current_page?(dreamfollowers_user_path(@user)) %>"><%= link_to dreamfollowers_user_path(@user) do %>follower <span class="badge"><%= @count_dreamfollowers %></span><% end %></li>
    </ul>
  </div>
</div>
<%= render 'dreams/dreams', dreams: @followdreams %>
