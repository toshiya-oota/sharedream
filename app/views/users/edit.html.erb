<h1><%= @user.name %>の編集ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :self_content, '夢を書いてね！' %>
        <%= f.text_area :self_content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>

  <%= f.submit 'プロフィール変更', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'キャンセル', @user %>
<div class="col-md-6 col-md-offset-9 col-xs-6 col-xs-offset-7">
  <%= link_to 'ユーザーを削除', @user, method: :delete, data: { confirm: 'このアカウントを削除しますか？' }, class: 'btn btn-danger' %>
</div>