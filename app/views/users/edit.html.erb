<h1><%= @user.name %>の編集ページ</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
     <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :self_content, '自己紹介、夢を書いてね！' %>
        <%= f.text_area :self_content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
  <%= f.submit 'プロフィール変更する', class: 'btn btn-primary' %>
  <%= link_to 'キャンセル', @user %>
<% end %>
<div class="delete_account_button">
  <%= link_to 'このアカウントを削除する', @user, method: :delete, data: { confirm: 'このアカウントを削除しますか？' }, class: 'btn btn-danger' %>
</div>