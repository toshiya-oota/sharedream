<header>
  <nav class="navbar navbar-inverse navbar-static-top" style="margin:0;">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-brand">
          <a class="navbar_color" href="/"><i class="fas fa-home"></i>シェアドリ！</br></a>
        </div>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          　<%= form_tag(users_path, :method => 'get' ) do %>
              <%= text_field_tag :search, "", placeholder: "ユーザーを検索"%>
              <%= submit_tag '検索', :name => nil,class:'btn btn-primary'%>
            <% end %>
            <li><%= link_to 'ユーザー一覧', users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'シェアドリホーム', user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'プロフィール更新、アカウント削除', edit_user_path(current_user) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to '新規登録', signup_path %></li>
            <li><%= link_to 'Login', login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>