<ul class="media-list">
  <% dreams.each do |dream| %>
    <li class="media">
      <div class="media-left">
        
      </div>
      <div class="media-body">
        <div>
          <%= link_to dream.user.name, user_path(dream.user) %> <span class="text-muted">posted at <%= dream.created_at %></span>
        </div>
        <div>
          <p><%= dream.content %></p>
          <%= render 'sharedreams/share_button', dream: dream %>
        </div>
        <div>
          <% if current_user == dream.user %>
            <%= link_to "Delete", dream, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
        
      </div>
    </li>
  <% end %>
</ul>