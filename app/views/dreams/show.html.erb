<h3><%= @dream.user.name %></h3>
<h1><%= @dream.content %></h1>
<h2>メッセージ一覧</h2>

<% @comments.each do |c| %>
   <div>
    <%= link_to c.user(@user) do %><%= image_tag c.user.image.url (:thumb) %>  <%= c.user.name %> <% end %>
    <%= c.content %>
    <hr>
  </div>
<% end %>


<%= form_for [@dream, @comment] do |f| %>
  <%= f.text_area :content ,:size=>"30x3" %>
  <br>
  <%= f.submit 'コメントする' %>
  <% end %>
<%= link_to "ホームへ戻る", @dream.user %>
