
<% if current_user == dream.user %>  
  <% if dream.release == true %>
    <%= form_for(dream) do |f| %>
      <%= f.hidden_field :release, value: false %>
      <%= f.submit 'Share!!', data: { confirm: "shareをやめる？" }, class: 'btn btn-warning' %>
    <% end %>
  <% else %>
    <%= form_for(dream) do |f| %>
      <%= f.hidden_field :release, value: true %>
      <%= f.submit '夢をShareする?', class: 'btn btn-default' %>
    <% end %>
  <% end %>
<% end %>