
<% if current_user == dream.user %>  
  <% if dream.release == true %>
    <%= form_for(dream) do |f| %>
      <%= f.hidden_field :release, value: false %>
      <%= f.submit 'Share!!', class: 'btn btn-warning btn-sm' %>
    <% end %>
  <% else %>
    <%= form_for(dream) do |f| %>
      <%= f.hidden_field :release, value: true %>
      <%= f.submit 'Share?', class: 'btn btn-default btn-xs' %>
    <% end %>
  <% end %>
<% end %>