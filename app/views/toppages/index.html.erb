<% if logged_in? %>
  <div class="row">
    <aside class="col-xs-6 col-md-4">
      <%= form_for(@dream) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 3 %>
        </div>
        <%= f.submit '夢をつぶやく', class: 'btn btn-primary btn-block' %>
      <% end %>
      <br></br>
      <%= link_to 'shareしている夢', user_path(current_user), class: 'btn btn-success btn-lg' %>
      <br></br>
      <%= link_to 'Dreamerを探す', users_path, class: 'btn btn-info btn-lg' %>
    </aside>
    <div class="col-xs-6 col-md-8">
     <%= render 'dreams/dreams', dreams: @dreams %>
    </div>
  </div>
<% else %>
  <div class="center">
    <div class="text-center">
      <h1>ShareDori</h1>
      <h3>夢をシェアして、<br>応援して、<br>より良い自分へ</h3>
      <br>
      <h2>シェアどりはじめよ?<h2>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>