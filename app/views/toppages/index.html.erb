<% if logged_in? %>
  <div class="row">
      <aside class="col-xs-6 col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.name %></h3>
      </div>
      <div class="panel-body">
        <% if @user.image.present? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag ("/images/tamago.jpeg") %>
        <% end %>
      </div>
      <div style="border-top: 1px solid #ccc;"><%= @user.self_content %></div>
    </div>
    </aside>
    <div class="col-xs-6 col-md-8">
       <%= form_for(@dream) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 6 ,placeholder:"シェアするとフォロー、コメントできます。シェアするまで、つぶやきは共有されません。"%>
          <%= f.file_field :image, class: 'form-control' %>
          <%= f.submit '夢をつぶやく', class: 'btn btn-primary btn-lg' %>
        </div>
       <% end %>
       <%= link_to 'シェアドリへ', user_path(current_user), class: 'btn btn-success' %>
       <br></br>
      <%= link_to 'ユーザー一覧', users_path, class: 'btn btn-info' %>
    </div>
  </div>
  <div>
  <%= render 'dreams/dreams', dreams: @dreams %>
  </div>
 
<% else %>
<div class="center">
  <div style="
  height:800px;
  background-size: cover;
  background-image: url(/images/loginImage.jpeg);
">
    <div class="text-center" style="padding:20px;">
      <h1 style="color:blue; display:inline;">Share</h1><h1 style="color:orange; display:inline;">Dori</h1>
      <h3 style="color:white;">夢からつながるSNS</h3>
    <div class="text-center" style="margin:20px;">
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-warning' %>
    </div>
    </div>
  </div>
</div>
<% end %>